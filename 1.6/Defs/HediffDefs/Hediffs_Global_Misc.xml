<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef ParentName="DiseaseBase">
		<defName>AI_Grabbed</defName>
		<description>This creature is being grabbed and can't move properly.</description>
		<label>grabbed</label>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>200</min>
					<max>200</max>
				</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.9</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>partially immobilized</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.6</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>grabbed</label>
				<minSeverity>0.5</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.4</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>grabbed tight</label>
				<minSeverity>0.8</minSeverity>
				<capMods>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.25</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>AI_Invisibility</defName>
		<label>stealthskin invisibility</label>
		<description>This animal has shifted their skin tones to camouflage in almost any surroundings.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Invisibility">
				<visibleToPlayer>true</visibleToPlayer>
			</li>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-6</severityPerDay>
				<showDaysToRecover>true</showDaysToRecover>
			</li>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
		</comps>
	</HediffDef>
	<HediffDef>
		<defName>AI_ToxicBuildup</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
		<description>Toxins in the bloodstream. This can come from various sources, including environmental toxins, venomous bites, or poisoned weapons.
\nAt high doses, toxic buildup is lethal. Even at low doses, it can generate cancers.
\nContrary to base game toxic buildup, creatures who die with this toxic damage can be eaten.</description>
		<label>toxic buildup</label>
		<lethalSeverity>1</lethalSeverity>
		<makesSickThought>true</makesSickThought>
		<scenarioCanAdd>true</scenarioCanAdd>
		<taleOnVisible>ToxicityRevealed</taleOnVisible>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-0.08</severityPerDayNotImmune>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
			</li>
			<li>
				<label>initial</label>
				<minSeverity>0.04</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.05</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.10</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>moderate</label>
				<minSeverity>0.40</minSeverity>
				<vomitMtbDays>5</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>146</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Carcinoma</hediff>
						<mtbDays>438</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>serious</label>
				<minSeverity>0.60</minSeverity>
				<vomitMtbDays>1</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>37</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Carcinoma</hediff>
						<mtbDays>111</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.80</minSeverity>
				<vomitMtbDays>0.5</vomitMtbDays>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.10</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Dementia</hediff>
						<mtbDays>13</mtbDays>
						<partsToAffect>
							<li>Brain</li>
						</partsToAffect>
					</li>
					<li Class="HediffGiver_Random">
						<hediff>Carcinoma</hediff>
						<mtbDays>39</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>
	<HediffDef ParentName="DiseaseBase">
		<defName>AI_Electric</defName>
		<description>A dangerous electric shock. It might damage the heart, and higher intensities increase the possibility of a heart attack.</description>
		<label>electric shock</label>
		<isBad>true</isBad>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>-2</severityPerDayNotImmune>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.9</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>10</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>shocked</label>
				<minSeverity>0.2</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.6</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>5</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>very shocked</label>
				<minSeverity>0.5</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.4</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>1</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
			<li>
				<label>paralysed</label>
				<minSeverity>0.8</minSeverity>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>HeartAttack</hediff>
						<mtbDays>0.5</mtbDays>
						<partsToAffect>
							<li>Heart</li>
						</partsToAffect>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>
	<HediffDef ParentName="DiseaseBase">
		<defName>AI_Petrification</defName>
		<description>The victim's skin is hardening and turning into brittle stone. This condition is reversible and will naturally dissipate after a few hours, but if it reaches a severity of 1 it will kill its victim.</description>
		<label>petrification</label>
		<lethalSeverity>1</lethalSeverity>
		<makesSickThought>true</makesSickThought>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>
					<min>15000</min>
					<max>20000</max>
				</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.9</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>stiff joints</label>
				<minSeverity>0.2</minSeverity>

				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.6</setMax>

					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.75</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>rocky skin</label>
				<minSeverity>0.5</minSeverity>

				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.5</setMax>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.5</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>brittle bones</label>
				<minSeverity>0.8</minSeverity>

				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.4</setMax>
					</li>
					<li>
						<capacity>Moving</capacity>
						<setMax>0.2</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<label>turned to stone</label>
				<minSeverity>0.99</minSeverity>

				
			</li>
		</stages>
	</HediffDef>
</Defs>