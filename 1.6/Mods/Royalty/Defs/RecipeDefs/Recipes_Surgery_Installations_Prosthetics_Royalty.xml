			<ThingDef>AI_AnimalSkinHardener</ThingDef>
			<HediffDef>AI_AnimalSkinHardener</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing animal skin hardener.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AI_AnimalSkinHardener</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>AI_AnimalSkinHardener</li>
			</thingDefs>
